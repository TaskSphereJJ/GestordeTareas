@using GestordeTaras.EN;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestordeTareas.UI</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/perfil.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/proyecto.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/comentario.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tarea.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CeateUser.css" asp-append-version="true" />
    @* <link href="~/css/tailwind.css" rel="stylesheet" /> *@
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
        integrity="sha512-rfwlPRxWExv5sf0pd4l71r5Id3vYkQIm0IaOH1VlqzLX8ASwbS7qHwXy1Fm5zH4JAr6Drl7HDe5Kr1yzE+yyCg=="
        crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Aplicar el tema guardado antes de renderizar -->
    <script>
        (function () {
            const savedMode = localStorage.getItem('darkMode');
            if (savedMode === 'dark') {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        })();
    </script>
</head>

<body>

    @{
        var nombre = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.GivenName)?.Value;
        var apellido = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Surname)?.Value;
        var correo = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Email)?.Value;
        var fotoPerfil = User.Claims.FirstOrDefault(c => c.Type == "FotoPerfil")?.Value;
    }

    @if (User.Identity.IsAuthenticated)
    {
        <div class="flex min-h-screen">
            <!-- Sidebar -->
            <aside id="sidebar" class="z-40 fixed left-0 top-0 h-full w-64 p-4">
                <!-- Contenido del Sidebar -->
                <div class="mb-4">
                    <div class="profile-container text-center">
                        <img src="@(fotoPerfil ?? "~/img/user.png")" alt="User"
                            class="profile-picture mx-auto h-24 w-24 rounded-full">
                        <h4 class="username mt-3 text-lg font-semibold">@($"{nombre} {apellido}")
                        </h4>
                        <span class="user-email text-sm text-gray-500 dark:text-gray-300">@correo</span>
                    </div>
                </div>

                <h5 class="subtitulo mt-6 text-base font-semibold text-gray-700 dark:text-gray-300">
                    Menú
                </h5>
                <!-- Menú del Sidebar -->
                <nav class="space-y-3">
                    <!-- INICIO -->
                    <a class="flex transform items-center rounded-lg px-3 py-2 text-gray-600 no-underline transition-colors duration-300 "
                        asp-area="" asp-controller="Home" asp-action="Index">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" class="h-5 w-5">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                        </svg>
                        <span class="mx-2 text-sm font-medium">Inicio</span>
                    </a>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Administrador"))
                    {
                        <!-- PERFIL -->
                        <a class="flex transform items-center rounded-lg px-3 py-2 text-gray-600 no-underline transition-colors duration-300 "
                            asp-area="" asp-controller="Usuario" asp-action="Perfil">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                stroke="currentColor" class="h-5 w-5">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            <span class="mx-2 text-sm font-medium">Perfil</span>
                        </a>

                        <!-- USUARIOS -->
                        <a class="no-in flex transform items-center rounded-lg px-3 py-2 text-gray-600 no-underline transition-colors duration-300 "
                            asp-area="" asp-controller="Usuario" asp-action="Index">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                stroke="currentColor" class="h-5 w-5">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
                            </svg>
                            <span class="mx-2 text-sm font-medium">Usuarios</span>
                        </a>

                        <!-- PROYECTOS -->
                        <a class="no-in flex transform items-center rounded-lg px-3 py-2 text-gray-600 no-underline transition-colors duration-300 "
                            asp-area="" asp-controller="Proyecto" asp-action="Index">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                stroke="currentColor" class="h-5 w-5">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
                            </svg>
                            <span class="mx-2 text-sm font-medium">Proyectos</span>
                        </a>
                    }

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Colaborador"))
                    {
                        <!-- PERFIL COLABORADOR -->
                        <a class="flex transform items-center rounded-lg px-3 py-2 text-gray-600 no-underline transition-colors duration-300 "
                            asp-area="" asp-controller="Usuario" asp-action="Perfil">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                stroke="currentColor" class="h-5 w-5">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            <span class="mx-2 text-sm font-medium">Perfil</span>
                        </a>

                        <!-- PROYECTO -->
                        <a class="flex transform items-center rounded-lg px-3 py-2 text-gray-600 no-underline no-underline transition-colors duration-300 "
                            asp-area="" asp-controller="Proyecto" asp-action="Index">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                stroke="currentColor" class="h-5 w-5">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
                            </svg>
                            <span class="mx-2 text-sm font-medium">Buscar proyecto</span>
                        </a>

                        <!-- MIS PROYECTOS -->
                        <a class="flex transform items-center rounded-lg px-3 py-2 text-gray-600 no-underline no-underline transition-colors duration-300 "
                            asp-area="" asp-controller="ProyectoUsuario" asp-action="MisProyectos">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                stroke="currentColor" class="h-5 w-5">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 00.75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 00-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0112 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 01-.673-.38m0 0A2.18 2.18 0 013 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 013.413-.387m7.5 0V5.25A2.25 2.25 0 0013.5 3h-3a2.25 2.25 0 00-2.25 2.25v.894m7.5 0a48.667 48.667 0 00-7.5 0M12 12.75h.008v.008H12v-.008z" />
                            </svg>
                            <span class="mx-2 text-sm font-medium">Mis Proyectos</span>
                        </a>

                    }

                    <!-- SECCION DE PROYECTOS -->
                    <div>
                        <div class="flex items-center justify-between">
                            <h2 class="subtitulo text-base font-semibold text-gray-800 dark:text-white">Projects</h2>

                            <button
                                class="rounded-lg border p-0.5 text-gray-500 transition-colors duration-200 hover:bg-purple-600 hover:text-white dark:border-gray-700 dark:text-gray-300 dark:hover:bg-gray-800">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                    stroke="currentColor" class="h-4 w-4">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                                </svg>
                            </button>
                        </div>

                        <nav class="mt-4 space-y-3">
                            <a
                                class="flex w-full transform items-center justify-between rounded-lg px-3 py-2 text-xs font-medium text-gray-600 transition-colors duration-300 ">
                                <div class="flex items-center gap-x-2">
                                    <span class="h-2 w-2 rounded-full bg-green-600"></span>
                                    <span>Exposicion del medio ambiente</span>
                                </div>

                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                    stroke="currentColor" class="h-4 w-4 rtl:rotate-180">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                                </svg>
                            </a>
                        </nav>
                    </div>
                </nav>
            </aside>

            <!-- Contenedor principal -->
            <div class="flex-1 flex flex-col">
                <!-- Header -->
                <header
                    class="headerlayout flex items-center justify-between bg-lightPurple px-3 py-4 shadow-md dark:bg-gray-800">
                    <!-- Botón para abrir Sidebar -->
                    <div class="flex lg:hidden">
                        <button type="button" class="text-gray-600 hover:text-blue-950 dark:text-yellow-300"
                            aria-label="Menu" onclick="toggleSidebar()">
                            <i class="fas fa-bars fa-lg"></i>
                        </button>
                    </div>
                    <div class="flex items-center">
                        <span class="mr-2 text-sm font-bold text-purple-400 dark:text-darkText">
                            @($"{nombre} {apellido}")
                        </span>
                    </div>
                    <!-- Botón de cambio de tema -->
                    <div id="darkModeToggle" class="mr-2 cursor-pointer">
                        <span id="darkModeIcon">
                            <i class="fas fa-sun text-yellow-500"></i>
                        </span>
                    </div>
                </header>

                <!-- Main -->
                <main role="main" class="main flex-1 overflow-y-auto p-6">
                    @RenderBody()
                </main>
                <!-- Renderizar la sección Scripts si está definida -->
                @RenderSection("Scripts", required: false)
            </div>
        </div>
    }


    <div id="loader-overlay">
        <div class="item">
            <div class="loader-pulse"></div>
        </div>
    </div>


    <div class="container mt-28">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <!-- Scripts -->
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('-translate-x-full');
            sidebar.classList.toggle('translate-x-0');
        }


        // JavaScript para el cambio de tema
        const darkModeToggle = document.getElementById('darkModeToggle');
        darkModeToggle.addEventListener('click', () => {
            const isDarkMode = document.documentElement.classList.toggle('dark');
            localStorage.setItem('darkMode', isDarkMode ? 'dark' : 'light');
            const darkModeIcon = document.getElementById('darkModeIcon');
            darkModeIcon.innerHTML = isDarkMode
                ? '<i class="fas fa-moon text-white"></i>'
                : '<i class="fas fa-sun text-yellow-500"></i>';
        });

        window.addEventListener('DOMContentLoaded', () => {
            const savedMode = localStorage.getItem('darkMode');
            if (savedMode === 'dark') {
                document.documentElement.classList.add('dark');
                document.getElementById('darkModeIcon').innerHTML = '<i class="fas fa-moon text-white"></i>';
            }
        });



        document.addEventListener('DOMContentLoaded', function () {
            const menuButton = document.querySelector('[aria-label="Menu"]');
            const closeButton = document.querySelector('[data-drawer-hide="drawer-navigation"]');
            const sidebar = document.getElementById('drawer-navigation');

            menuButton.addEventListener('click', () => {
                sidebar.style.transform = 'translateX(0)';
            });

            closeButton.addEventListener('click', () => {
                sidebar.style.transform = 'translateX(-100%)';
            });

            document.addEventListener('click', (event) => {
                if (!sidebar.contains(event.target) && !menuButton.contains(event.target)) {
                    sidebar.style.transform = 'translateX(-100%)';
                }
            });

            // Ocultar sidebar al hacer clic en un enlace dentro del sidebar
            const sidebarLinks = document.querySelectorAll('#drawer-navigation a');
            sidebarLinks.forEach(link => {
                link.addEventListener('click', () => {
                    sidebar.style.transform = 'translateX(-100%)';
                });
            });
        });


        // Para los selectores del perfil y header
        document.addEventListener('DOMContentLoaded', function () {
            const userMenuButton = document.getElementById('userMenuButton');
            const userMenuOptions = document.getElementById('userMenuOptions');

            userMenuButton.addEventListener('click', function () {
                userMenuOptions.style.display = userMenuOptions.style.display === 'block' ? 'none' : 'block';
            });

            userMenuOptions.addEventListener('click', function (event) {
                if (event.target.tagName === 'A') {
                    userMenuOptions.style.display = 'none';
                    event.stopPropagation(); // Evita que el evento se propague al contenedor y vuelva a activar el menú
                }
            });
            document.addEventListener('click', function (event) {
                if (!userMenuButton.contains(event.target) && !userMenuOptions.contains(event.target)) {
                    userMenuOptions.style.display = 'none';
                }
            });
        });

        document.addEventListener("DOMContentLoaded", function () {
            const loaderOverlay = document.getElementById('loader-overlay');

            // Mostrar el loader antes de cambiar de vista
            function showLoader() {
                loaderOverlay.classList.add('active');
            }

            // Detectar clics en todos los enlaces y formularios
            document.body.addEventListener('click', function (event) {
                const target = event.target;
                const link = target.closest('a');

                // Excluir los botones y enlaces que abren modales
                if (
                    target.closest('[data-bs-toggle="modal"]') ||// Ignorar clics que abren modales
                    target.closest('[onclick*="cargarVistaEdit"]') ||
                    target.closest('[onclick*="cargarVistaCreate"]') ||
                    target.closest('[onclick*="cargarVistaDetails"]') ||
                    target.closest('[onclick*="cargarVistaDelete"]')
                ) {
                    return;
                }

                if (
                    target.closest('form[action*="DeleteOwn"]') &&
                    target.tagName === 'BUTTON' &&
                    target.type === 'submit'
                ) {
                    return;  // No activar el loader en el formulario de eliminación
                }

                // Excluir el botón de Cancelar (onclick="toggleEditMode()")
                if (
                    target.closest('[onclick="toggleEditMode()"]')
                ) {
                    return;  // No activar el loader en el botón de cancelar
                }

                // Si es un enlace (a) con href
                if (link && link.hasAttribute('href')) {
                    // Evitar la acción predeterminada del enlace
                    event.preventDefault();

                    // Mostrar el loader
                    showLoader();

                    // Redirigir después de un pequeño retraso para permitir que el loader sea visible
                    setTimeout(function () {
                        window.location.href = link.href;
                    }, 200);  // Ajusta el tiempo de retraso según sea necesario
                }

                // Solo activar el loader para enlaces internos o formularios
                if (
                    target.tagName === 'A' && target.getAttribute('href') &&
                    !target.getAttribute('target') // Ignorar enlaces con target="_blank"
                ) {
                    showLoader();
                } else if (target.tagName === 'BUTTON' || (target.tagName === 'INPUT' && target.type === 'submit')) {
                    // Solo activar el loader para botones o inputs tipo submit dentro de un formulario
                    const form = target.closest('form');
                    if (form) {
                        showLoader();
                    }
                }
            });

            // Ocultar el loader cuando la página termine de cargar
            window.onload = function () {
                loaderOverlay.classList.remove('active');
            };
        });

    </script>
</body>

</html>