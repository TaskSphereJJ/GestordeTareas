@model List<GestordeTaras.EN.InvitacionProyecto>

@{
    ViewData["Title"] = "Invitaciones";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


@await Html.PartialAsync("_Alerts")

<!-- Menú de Navegación -->
<nav class="flex justify-end mb-4">
    <a href="@Url.Action("Details", "Proyecto", new { id = ViewBag.IdProyecto })" class="tab-button text-gray-500 border-b-2 mx-2 no-underline" data-tab="info">
        Información
    </a>
    <a href="@Url.Action("Details", "Proyecto", new { id = ViewBag.IdProyecto })" class="tab-button text-gray-500 mx-2 no-underline" data-tab="personas">
        Personas
    </a>
    @if (User.IsInRole("Administrador"))
    {
        <a href="@Url.Action("Details", "Proyecto", new { id = ViewBag.IdProyecto })" class="tab-button text-gray-500 mx-2 no-underline" data-tab="asignar">
            Asignar Encargado
        </a>
    }
    @if (User.IsInRole("Administrador") || (User.IsInRole("Colaborador") && ViewBag.EsEncargado == true))
    {
        <a href="@Url.Action("Details", "Proyecto", new { id = ViewBag.IdProyecto })" class="tab-button text-blue-500 border-blue-500 mx-2 no-underline">
            Invitar Usuario
        </a>
    }
</nav>


<div class="container text-center mx-auto p-4 max-w-4xl">
    <h2 class="text-3xl font-bold mb-6 text-gray-800">INVITACIONES</h2>

    <!-- Enviar nueva invitación -->
    @if (User.IsInRole("Administrador"))
    {
        <div class="bg-white shadow-md rounded-lg p-6 mb-8 max-w-4xl mx-auto">
            <h3 class="text-xl font-semibold mb-4 text-gray-700">Enviar Invitación</h3>
            <form asp-action="EnviarInvitacion" method="post" class="flex items-end gap-4">
                <div class="flex-grow">
                    <label for="correoElectronico" class="block text-sm font-medium text-gray-700 mb-1">
                        Correo Electrónico
                    </label>
                    <input type="email" id="correoElectronico" name="correoElectronico" required
                           class="w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"
                           placeholder="Ingrese una dirección de correo electrónico" />
                </div>
                <input type="hidden" name="IdProyecto" value="@ViewBag.IdProyecto" />
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                    Enviar Invitación
                </button>
            </form>
        </div>
    }
    
    <!-- Lista de invitaciones y filtro -->
    <div class="bg-white shadow-md rounded-lg p-6 max-w-4xl mx-auto">
        <div class="flex flex-row items-center justify-between mb-4">
            <h3 class="text-xl font-semibold text-gray-700">Invitaciones Enviadas</h3>
            <form method="get" asp-action="FiltrarInvitaciones" class="flex items-center space-x-4">
                <input type="hidden" name="id" value="@ViewBag.IdProyecto" />
                <select id="estado" name="estado"
                        class="form-select rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
                    <option value="Todos">Todos</option>
                    <option value="Pendiente">Pendiente</option>
                    <option value="Aceptada">Aceptada</option>
                    <option value="Rechazada">Rechazada</option>
                </select>
                <button type="submit" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded">
                    Filtrar
                </button>
            </form>
        </div>
        @if (Model != null && Model.Any())
        {
            <ul class="space-y-4">
                @foreach (var invitacion in Model)
                {
                    <li class="flex items-center justify-between bg-gray-50 p-4 rounded-lg">
                        <div>
                            <p class="font-medium text-gray-800">@invitacion.CorreoElectronico</p>
                            <span class="inline-block px-3 py-1 rounded-full text-sm font-semibold
                    @(invitacion.Estado == "Pendiente" ? "bg-yellow-100 text-yellow-800" :
                      invitacion.Estado == "Aceptada" ? "bg-green-100 text-green-800" :
                      "bg-red-100 text-red-800")">
                                @invitacion.Estado
                            </span>
                        </div>
                        @if (User.IsInRole("Administrador"))
                        {
                            <button class="text-gray-500 hover:text-gray-700"
                                    onclick="document.getElementById('confirmDeleteCard-@invitacion.Id').classList.remove('hidden');"
                                    aria-label="Eliminar invitación">
                                <img src="https://cdn-icons-png.freepik.com/256/2550/2550213.png?semt=ais_hybrid" alt="Eliminar" class="h-6 w-6">
                            </button>


                            <!-- Tarjeta de Confirmación -->
                            <div id="confirmDeleteCard-@invitacion.Id" class="hidden fixed inset-0 flex items-center justify-center z-50 bg-gray-900 bg-opacity-50">
                                <div class="max-w-xs rounded-lg overflow-hidden bg-white shadow-md transition-shadow duration-300">
                                    <div class="p-6 mt-6">
                                        <div class="flex justify-center items-center bg-red-200 rounded-full w-16 h-16 mx-auto">
                                            <img src="https://cdn-icons-png.freepik.com/256/3712/3712167.png" alt="Eliminar" class="h-12 w-12 text-red-600" />
                                        </div>
                                        <h2 class="mt-4 text-center text-lg font-semibold text-gray-900">Confirmar Eliminación</h2>
                                        <p class="mt-2 text-center text-sm text-gray-600">¿Estás seguro de que deseas eliminar esta invitación? Esta acción no se puede deshacer.</p>
                                    </div>
                                    <div class="bg-gray-50 p-4 flex justify-between">
                                        <button type="button"
                                                class="flex-1 mr-2 px-4 py-2 bg-gray-300 text-gray-800 font-medium rounded hover:bg-gray-400 transition duration-200"
                                                onclick="document.getElementById('confirmDeleteCard-@invitacion.Id').classList.add('hidden');">
                                            Cancelar
                                        </button>
                                        <form method="post" asp-action="EliminarInvitacion" class="flex-1">
                                            <input type="hidden" name="id" value="@invitacion.Id" />
                                            <input type="hidden" name="idProyecto" value="@ViewBag.IdProyecto" />
                                            <button type="submit"
                                                    class="flex-1 px-4 py-2 bg-red-600 text-white font-semibold rounded hover:bg-red-700 transition duration-200">
                                                Eliminar
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </li>
                }
            </ul>

        }
        else
        {
            <p class="text-gray-600">No hay invitaciones disponibles.</p>
        }
    </div>
    <div class="text-center mt-6">
        <a href="@Url.Action("Index", "Proyecto")" class="mt-2 inline-block bg-gray-500 text-white font-bold py-2 px-4 rounded hover:bg-purple-700 transition-colors no-underline duration-300">
            Regresar
        </a>
    </div>
</div>