
@model List<GestordeTaras.EN.InvitacionProyecto>

@{
    ViewData["Title"] = "Invitaciones";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


@await Html.PartialAsync("_Alerts")

<!-- Menú de Navegación -->
<nav class="mb-4 flex justify-end">
    <a href="@Url.Action("Details", "Proyecto", new { id = ViewBag.IdProyecto })" class="tab-button border-b-2 mx-2 text-gray-500 no-underline" data-tab="info">
        Información
    </a>
    <a href="@Url.Action("Details", "Proyecto", new { id = ViewBag.IdProyecto })" class="tab-button mx-2 text-gray-500 no-underline" data-tab="personas">
        Personas
    </a>
    @if (User.IsInRole("Administrador"))
    {
        <a href="@Url.Action("Details", "Proyecto", new { id = ViewBag.IdProyecto })" class="tab-button mx-2 text-gray-500 no-underline" data-tab="asignar">
            Asignar Encargado
        </a>
    }
    @if (User.IsInRole("Administrador") || (User.IsInRole("Colaborador") && ViewBag.EsEncargado == true))
    {
        <a href="@Url.Action("Details", "Proyecto", new { id = ViewBag.IdProyecto })" class="tab-button mx-2 border-blue-500 text-blue-500 no-underline">
            Invitar Usuario
        </a>
    }
</nav>


<div class="container mx-auto max-w-4xl p-4 text-center">
    <h2 class="mb-6 text-3xl font-bold text-gray-800">INVITACIONES</h2>

    <!-- Enviar nueva invitación -->
    @if (User.IsInRole("Administrador") || (User.IsInRole("Colaborador") && ViewBag.EsEncargado == true))
    {
        <div class="mx-auto mb-8 max-w-4xl rounded-lg bg-white p-6 shadow-md">
            <h3 class="mb-4 text-xl font-semibold text-gray-700">Enviar Invitación</h3>
            <form asp-action="EnviarInvitacion" method="post" class="flex items-end gap-4">
                <div class="flex-grow">
                    <label for="correoElectronico" class="mb-1 block text-left text-lg font-medium text-gray-700">
                        Correo Electrónico
                    </label>
                    <input type="email" id="correoElectronico" name="correoElectronico" required
                           class="h-10 w-full rounded-md border-gray-300 px-2 py-2 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"
                           placeholder="Ingrese una dirección de correo electrónico" />
                </div>
                <input type="hidden" name="IdProyecto" value="@ViewBag.IdProyecto" />
                <button type="submit" class="rounded bg-indigo-500 px-4 py-2 font-bold text-white hover:bg-blue-600">
                    Enviar Invitación
                </button>
            </form>
        </div>
    }


    <!-- Lista de invitaciones y filtro -->
    <div class="mx-auto max-w-4xl rounded-lg bg-white p-6 shadow-md">
        <div class="mb-4 flex flex-row items-center justify-between">
            <h3 class="text-xl font-semibold text-gray-700">Invitaciones Enviadas</h3>
            <form method="get" asp-action="FiltrarInvitaciones" class="flex-1 flex items-center space-x-4">
                <input type="hidden" name="id" value="@ViewBag.IdProyecto" />

                <!-- Botones de filtro como reemplazo del select -->
                <button type="submit" name="estado" value="Todos"
                        class="rounded-full px-4 py-2 font-semibold
@(ViewContext.HttpContext.Request.Query["estado"] == "Todos" ? "bg-indigo-500 text-white" : "bg-gray-200 text-gray-800")">
                    Todas
                </button>

                <button type="submit" name="estado" value="Pendiente"
                        class="rounded-full px-4 py-2 font-semibold
@(ViewContext.HttpContext.Request.Query["estado"] == "Pendiente" ? "bg-indigo-500 text-white" : "bg-gray-200 text-gray-800")">
                    Pendiente
                </button>

                <button type="submit" name="estado" value="Aceptada"
                        class="rounded-full px-4 py-2 font-semibold
@(ViewContext.HttpContext.Request.Query["estado"] == "Aceptada" ? "bg-indigo-500 text-white" : "bg-gray-200 text-gray-800")">
                    Aceptada
                </button>

                <button type="submit" name="estado" value="Rechazada"
                        class="rounded-full px-4 py-2 font-semibold
@(ViewContext.HttpContext.Request.Query["estado"] == "Rechazada" ? "bg-indigo-500 text-white" : "bg-gray-200 text-gray-800")">
                    Rechazada
                </button>
            </form>
        </div>


        @if (Model != null && Model.Any())
        {
            <ul class="space-y-4">
                @foreach (var invitacion in Model)
                {
                    <li class="flex items-center justify-between rounded-lg bg-gray-50 p-4">
                        <div>
                            <p class="font-medium text-gray-800">@invitacion.CorreoElectronico</p>
                            <span class="inline-block rounded-full px-3 py-1 text-sm font-semibold
@(invitacion.Estado == "Pendiente" ? "bg-yellow-100 text-yellow-800" :
                      invitacion.Estado == "Aceptada" ? "bg-green-100 text-green-800" :
                      "bg-red-100 text-red-800")">
                                @invitacion.Estado
                            </span>
                        </div>
                        @if (User.IsInRole("Administrador") || (User.IsInRole("Colaborador") && ViewBag.EsEncargado == true))
                        {
                            <!-- Botón de eliminar con icono moderno y transiciones mejoradas -->
                            <button class="text-gray-500 transition duration-200 hover:text-red-600"
                                    onclick="document.getElementById('confirmDeleteCard-@invitacion.Id').classList.remove('hidden');"
                                    aria-label="Eliminar invitación">
                                <img src="https://cdn-icons-png.freepik.com/256/2550/2550213.png?semt=ais_hybrid"
                                     alt="Eliminar" class="opacity-80 h-6 w-6 transition duration-200 hover:opacity-100">
                            </button>

                            <!-- Tarjeta de Confirmación -->
                            <div id="confirmDeleteCard-@invitacion.Id" class="bg-opacity-60 fixed inset-0 z-50 flex hidden items-center justify-center bg-gray-800 transition-opacity duration-300">
                                <div class="w-80 transform rounded-xl bg-white shadow-lg transition-all duration-300">
                                    <!-- Contenido de Confirmación -->
                                    <div class="p-4 pb-2 text-center">
                                        <!-- Se reduce el padding-bottom aquí -->
                                        <h2 class="text-lg font-semibold text-gray-900">Confirmar Eliminación</h2>
                                        <p class="mt-2 text-sm text-gray-500">¿Estás seguro de que deseas eliminar esta invitación? Esta acción no se puede deshacer.</p>
                                    </div>

                                    <div class="flex justify-between gap-2 rounded-b-xl bg-gray-100 px-4 py-3">
                                        <button type="button"
                                                class="flex-1 rounded bg-gray-200 px-4 py-2 font-medium text-gray-700 transition duration-200 hover:bg-gray-300"
                                                onclick="document.getElementById('confirmDeleteCard-@invitacion.Id').classList.add('hidden');">
                                            Cancelar
                                        </button>
                                        <form method="post" asp-action="EliminarInvitacion" class="flex-1">
                                            <input type="hidden" name="id" value="@invitacion.Id" />
                                            <input type="hidden" name="idProyecto" value="@ViewBag.IdProyecto" />
                                            <button type="submit"
                                                    class="flex-1 rounded bg-red-500 px-4 py-2 font-semibold text-white transition duration-200 hover:bg-red-600">
                                                Eliminar
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>


                        }

                    </li>
                }
            </ul>

        }
        else
        {
            <p class="text-gray-600">No hay invitaciones disponibles.</p>
        }
    </div>
    <div class="mt-6 text-center">
        <a href="@Url.Action("Index", "Proyecto")" class="mt-2 inline-block rounded bg-gray-500 px-4 py-2 font-bold text-white no-underline transition-colors duration-300 hover:bg-purple-700">
            Regresar
        </a>
    </div>
</div>