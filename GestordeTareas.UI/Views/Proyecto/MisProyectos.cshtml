@model List<GestordeTaras.EN.Proyecto>

<h2 class="text-center mb-4">Mis Proyectos</h2>

@if (Model != null && Model.Any())
{
    <div class="list-group">
        @foreach (var proyecto in Model)
        {
            <div class="list-group-item mb-3">
                <h5 class="mb-2">@proyecto.Titulo</h5>
                <p class="mb-1">Descripción: @proyecto.Descripcion</p>
                <small class="text-muted">Fecha de finalización: @proyecto.FechaFinalizacion.ToString("dd/MM/yyyy")</small>
                <div class="mt-3">
                    <a class="btn btn-primary" asp-action="Index" asp-controller="Tarea" asp-route-proyectoId="@proyecto.Id">Ir al Proyecto</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center">
        <h1 class="text-3xl font-extrabold text-gray-700">No hay proyectos disponibles</h1>
        <a class="btn btn-success mt-4" asp-action="Index" asp-controller="Proyecto">Únete a un Proyecto</a>
    </div>
}
