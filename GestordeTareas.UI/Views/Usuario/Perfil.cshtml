@model GestordeTaras.EN.Usuario

<div class="profile">
    <h1>Mi Perfil</h1>

    <div class="profile-info">
        <p><strong>Nombre:</strong> @Html.DisplayFor(model => model.Nombre)</p>
        <p><strong>Apellido:</strong> @Html.DisplayFor(model => model.Apellido)</p>
        <p><strong>Teléfono:</strong> @Html.DisplayFor(model => model.Telefono)</p>
        <p><strong>Fecha de Nacimiento:</strong> @Html.DisplayFor(model => model.FechaNacimiento)</p>
        <p><strong>Cargo:</strong> @Html.DisplayFor(model => model.Cargo)</p>
        <p><strong>Nombre de Usuario:</strong> @Html.DisplayFor(model => model.NombreUsuario)</p>
        <p><strong>Fecha de Registro:</strong> @Html.DisplayFor(model => model.FechaRegistro)</p>
    </div>

    <div class="profile-actions">
        @Html.ActionLink("Modificar", "Edit", new { id = Model.Id }, new { @class = "btn btn-outline-info" })
        @Html.ActionLink("Detalles", "Details", new { id = Model.Id }, new { @class = "btn btn-outline-secondary" })
        @Html.ActionLink("Eliminar", "Delete", new { id = Model.Id }, new { @class = "btn btn-outline-danger" })
    </div>
</div>