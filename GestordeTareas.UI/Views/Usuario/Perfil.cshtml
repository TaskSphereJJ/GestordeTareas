@model GestordeTaras.EN.Usuario

<div class="flex items-center justify-center min-h-screen">
    <div class="max-w-3xl w-full p-8 bg-white rounded-lg ">
        <!-- Contenedor de Imagen de Perfil Fijo -->
        <div class="flex items-center justify-center space-x-8">
            <!-- Imagen de perfil (Espacio reservado) -->
            <div
                class="w-64 h-64 rounded-full overflow-hidden shadow-md border-4 border-gray-200 flex items-center justify-center">
                <img src="~/img/FOOTOO.png" alt="Profile Picture Placeholder" class="w-full h-full object-cover">
            </div>
            <!-- Contenedor para la Información y Formulario -->
            <div class="flex-grow">
                <!-- Vista del perfil -->
                <div id="profileDisplay" class="space-y-6">
                    <!-- Información del perfil (Vista) -->
                    <div>
                        <h3 class="text-xl font-semibold text-gray-800 flex items-center">
                            <i class="fas fa-user mr-2 text-gray-500"></i> Nombre:
                        </h3>
                        <p class="text-lg text-gray-600">@Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model
                            => model.Apellido)</p>
                    </div>

                    <div>
                        <h3 class="text-xl font-semibold text-gray-800 flex items-center">
                            <i class="fas fa-envelope mr-2 text-gray-500"></i> Correo Electrónico:
                        </h3>
                        <p class="text-lg text-gray-600">@Html.DisplayFor(model => model.NombreUsuario)</p>
                    </div>

                    <div>
                        <h3 class="text-xl font-semibold text-gray-800 flex items-center">
                            <i class="fas fa-phone mr-2 text-gray-500"></i> Teléfono:
                        </h3>
                        <p class="text-lg text-gray-600">@Html.DisplayFor(model => model.Telefono)</p>
                    </div>

                    <div>
                        <h3 class="text-xl font-semibold text-gray-800 flex items-center">
                            <i class="fas fa-briefcase mr-2 text-gray-500"></i> Cargo:
                        </h3>
                        <p class="text-lg text-gray-600">@Html.DisplayFor(model => model.Cargo.Nombre)</p>
                    </div>

                    <div>
                        <h3 class="text-xl font-semibold text-gray-800 flex items-center">
                            <i class="fas fa-birthday-cake mr-2 text-gray-500"></i> Fecha de Nacimiento:
                        </h3>
                        <p class="text-lg text-gray-600">@Html.DisplayFor(model => model.FechaNacimiento)</p>
                    </div>

                    <!-- Botón para editar perfil -->
                    <div class="flex justify-center">
                        <button id="editProfileBtn"
                            class="bg-indigo-500 text-white font-semibold py-2 px-6 rounded-lg hover:bg-indigo-600 shadow-md"
                            onclick="toggleEditMode()">
                            <i class="fas fa-edit mr-2"></i> Editar Perfil
                        </button>
                    </div>
                </div>

                <!-- Formulario de edición del perfil (Oculto inicialmente) -->
                <form id="profileForm" class="space-y-6" method="post" asp-action="EditOwn"
                    enctype="multipart/form-data" style="display: none;">
                    <input type="hidden" asp-for="Id" />

                    <div>
                        <label for="Nombre" class="block text-xl font-medium text-gray-800 flex items-center">
                            <i class="fas fa-user mr-2 text-gray-500"></i> Nombre
                        </label>
                        <input type="text" asp-for="Nombre"
                            class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-lg">
                        <span asp-validation-for="Nombre" class="text-red-500"></span>
                    </div>

                    <div>
                        <label for="Apellido" class="block text-xl font-medium text-gray-800 flex items-center">
                            <i class="fas fa-user mr-2 text-gray-500"></i> Apellido
                        </label>
                        <input type="text" asp-for="Apellido"
                            class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-lg">
                        <span asp-validation-for="Apellido" class="text-red-500"></span>
                    </div>

                    <div>
                        <label for="NombreUsuario" class="block text-xl font-medium text-gray-800 flex items-center">
                            <i class="fas fa-envelope mr-2 text-gray-500"></i> Correo Electrónico
                        </label>
                        <input type="text" asp-for="NombreUsuario"
                            class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-lg">
                        <span asp-validation-for="NombreUsuario" class="text-red-500"></span>
                    </div>

                    <div>
                        <label for="Telefono" class="block text-xl font-medium text-gray-800 flex items-center">
                            <i class="fas fa-phone mr-2 text-gray-500"></i> Teléfono
                        </label>
                        <input type="text" asp-for="Telefono"
                            class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-lg">
                        <span asp-validation-for="Telefono" class="text-red-500"></span>
                    </div>

                    <div>
                        <label for="Cargo" class="block text-xl font-medium text-gray-800 flex items-center">
                            <i class="fas fa-briefcase mr-2 text-gray-500"></i> Cargo
                        </label>
                        <select asp-for="IdCargo"
                            class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-lg"
                            asp-items="ViewBag.Cargos">
                            <option value="">Seleccionar</option>
                        </select>
                    </div>

                    <div>
                        <label for="FechaNacimiento" class="block text-xl font-medium text-gray-800 flex items-center">
                            <i class="fas fa-birthday-cake mr-2 text-gray-500"></i> Fecha de Nacimiento
                        </label>
                        <input type="date" asp-for="FechaNacimiento"
                            class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-lg">
                        <span asp-validation-for="FechaNacimiento" class="text-red-500"></span>
                    </div>

                    <!-- Botones de acción -->
                    <div class="flex justify-center space-x-4 mt-6">
                        <button type="submit"
                            class="bg-indigo-500 text-white font-semibold py-2 px-6 rounded-lg hover:bg-indigo-600 shadow-md">
                            <i class="fas fa-save mr-2"></i> Guardar
                        </button>
                        <button type="button"
                            class="bg-gray-500 text-white font-semibold py-2 px-6 rounded-lg hover:bg-gray-600 shadow-md"
                            onclick="toggleEditMode()">
                            <i class="fas fa-times mr-2"></i> Cancelar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Función para alternar el modo de edición
    function toggleEditMode() {
        const profileForm = document.getElementById('profileForm');
        const profileDisplay = document.getElementById('profileDisplay');
        const editButton = document.getElementById('editProfileBtn');

        if (profileForm.style.display === 'none') {
            profileForm.style.display = 'block';
            profileDisplay.style.display = 'none';
            editButton.style.display = 'none';
        } else {
            profileForm.style.display = 'none';
            profileDisplay.style.display = 'block';
            editButton.style.display = 'inline-block';
        }
    }
</script>
