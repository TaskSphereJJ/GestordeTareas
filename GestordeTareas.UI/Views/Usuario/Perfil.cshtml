@model GestordeTaras.EN.Usuario

@await Html.PartialAsync("_Alerts")
<div class="p-8 bg-red-500 dark:bg-darkPurple ">
    <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-200 mb-6">Mi Perfil</h1>

    <!-- Botón para activar el modo de edición -->
    <button id="editProfileBtn"
        class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition-colors duration-300"
        onclick="toggleEditMode()">Editar Perfil</button>

    <!-- Formulario para editar el perfil -->
    <form id="profileForm" method="post" asp-action="EditOwn" enctype="multipart/form-data"
        class="hidden mt-6 space-y-4">
        <input type="hidden" asp-for="Id" />

        <!-- Foto de perfil y cambiar foto -->
        <div class="flex items-center space-x-4">
            <div class="relative w-32 h-32 rounded-full overflow-hidden">
                <img id="previewImage" src="@Url.Content(Model.FotoPerfil)" alt="Foto de perfil"
                    class="w-full h-full object-cover" />
                <!-- Icono para cambiar la foto, similar al boceto -->
                <label for="fotoPerfil"
                    class="absolute bottom-0 left-0 bg-blue-500 text-white p-2 rounded-full cursor-pointer hover:bg-blue-600 transition-colors duration-300">
                    <i class="fas fa-camera"></i>
                </label>
                <input type="file" id="fotoPerfil" name="FotoPerfil" accept="image/*" class="hidden"
                    onchange="previewFile()" />
            </div>
        </div>

        <!-- Información del perfil -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 dark:bg-darkPurple">
            <div>
                <label class="text-sm text-gray-600 dark:text-gray-300">Nombre</label>
                <input type="text" asp-for="Nombre"
                    class="w-full border border-gray-300 dark:border-gray-600 px-4 py-2 rounded-lg focus:outline-none focus:border-blue-500 dark:bg-darkPurple dark:text-gray-200"
                    placeholder="Tu nombre" />
                <span asp-validation-for="Nombre" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label class="text-sm text-gray-600 dark:text-gray-300">Apellido</label>
                <input type="text" asp-for="Apellido"
                    class="w-full border border-gray-300 dark:border-gray-600 px-4 py-2 rounded-lg focus:outline-none focus:border-blue-500 dark:bg-darkPurple dark:text-gray-200"
                    placeholder="Tu apellido" />
                <span asp-validation-for="Apellido" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label class="text-sm text-gray-600 dark:text-gray-300">Correo electrónico</label>
                <input type="text" asp-for="NombreUsuario"
                    class="w-full border border-gray-300 dark:border-gray-600 px-4 py-2 rounded-lg focus:outline-none focus:border-blue-500 dark:bg-darkPurple dark:text-gray-200"
                    placeholder="ejemplo@correo.com" />
                <span asp-validation-for="NombreUsuario" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label class="text-sm text-gray-600 dark:text-gray-300">Teléfono</label>
                <input type="text" asp-for="Telefono"
                    class="w-full border border-gray-300 dark:border-gray-600 px-4 py-2 rounded-lg focus:outline-none focus:border-blue-500 dark:bg-darkPurple dark:text-gray-200"
                    placeholder="12345678" />
                <span asp-validation-for="Telefono" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label class="text-sm text-gray-600 dark:text-gray-300">Fecha de Nacimiento</label>
                <input type="date" asp-for="FechaNacimiento"
                    class="w-full border border-gray-300 dark:border-gray-600 px-4 py-2 rounded-lg focus:outline-none focus:border-blue-500 dark:bg-darkPurple dark:text-gray-200" />
                <span asp-validation-for="FechaNacimiento" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <!-- Botones del formulario -->
        <div class="mt-6 flex justify-end space-x-4 dark:bg-darkPurple">
            <button type="submit"
                class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition-colors duration-300">Guardar</button>
            <button type="button"
                class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition-colors duration-300"
                onclick="toggleEditMode()">Cancelar</button>
        </div>
    </form>

    <!-- Vista del perfil -->
    <div id="profileDisplay" class="mt-6 space-y-4 dark:bg-darkPurple">
        <div class="flex items-center space-x-4 dark:bg-darkPurple">
            <!-- Foto de perfil -->
            <div class="w-32 h-32 rounded-full overflow-hidden">
                <img src="@Url.Content(Model.FotoPerfil)" alt="Foto de perfil" class="w-full h-full object-cover" />
            </div>

            <!-- Información básica -->
            <div class="text-gray-800 dark:text-gray-200 dark:bg-darkPurple">
                <p><span class="font-bold dark:text-gray-200">Nombre:</span> @Html.DisplayFor(model => model.Nombre)</p>
                <p><span class="font-bold dark:text-gray-200">Apellido:</span> @Html.DisplayFor(model => model.Apellido)
                </p>
                <p><span class="font-bold dark:text-gray-200">Correo electrónico:</span> @Html.DisplayFor(model =>
                    model.NombreUsuario)</p>
                <p><span class="font-bold dark:text-gray-200">Teléfono:</span> @Html.DisplayFor(model => model.Telefono)
                </p>
                <p><span class="font-bold dark:text-gray-200">Registro:</span> @Html.DisplayFor(model =>
                    model.FechaRegistro)</p>
            </div>
        </div>

        <hr class="border-gray-300 dark:border-gray-600" />

        <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200">Proyectos a los que pertenece</h2>
    </div>
</div>

<script>
    function toggleEditMode() {
        const profileForm = document.getElementById('profileForm');
        const profileDisplay = document.getElementById('profileDisplay');
        const editButton = document.getElementById('editProfileBtn');

        if (profileForm.style.display === 'none') {
            profileForm.style.display = 'block';
            profileDisplay.style.display = 'none';
            editButton.style.display = 'none';
        } else {
            profileForm.style.display = 'none';
            profileDisplay.style.display = 'block';
            editButton.style.display = 'inline-block';
        }
    }

    function previewFile() {
        var preview = document.getElementById('previewImage');
        var file = document.getElementById('fotoPerfil').files[0];
        var reader = new FileReader();

        reader.onloadend = function () {
            preview.src = reader.result;
        };

        if (file) {
            reader.readAsDataURL(file);
        } else {
            preview.src = "@Url.Content(Model.FotoPerfil)";
        }
    }
</script>
