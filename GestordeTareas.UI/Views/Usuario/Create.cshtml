@model GestordeTaras.EN.Usuario
@{
    ViewData["Title"] = "Crear Cuenta";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

@await Html.PartialAsync("_Alerts")

<div
    class="login_container max-w-screen-xl mx-auto bg-white shadow sm:rounded-lg flex justify-center flex-1 overflow-hidden">
    <div class="lg:w-1/2 flex-1 xl:w-5/12 p-4 sm:p-4 mt-0">
        <div class="mt-4 flex flex-col items-center">
            <h1 class="text-lg no-underline inicio xl:text-xl font-extrabold underline">
                CREAR UNA CUENTA
            </h1>
            <div class="w-full flex-1 mt-2 mb-2">
                <div class="my-4 border-b text-center">
                    <div
                        class="leading-none px-2 inline-block text-sm text-gray-600 tracking-wide font-medium bg-white transform -translate-y-1/2">
                        Complete los campos para crear una nueva cuenta
                    </div>
                </div>
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mx-auto w-[60%] flex flex-col items-center">
                        <!-- Campo para la Foto de Perfil -->
                        <div class="mt-4 w-full flex flex-col items-center">
                            <label for="FotoPerfil"
                                class="block text-gray-700 text-sm font-medium mb-2 text-center">Foto de Perfil</label>
                            <div class="flex flex-col items-center space-y-4">
                                <div
                                    class="w-24 h-24 bg-gray-200 rounded-full overflow-hidden flex items-center justify-center">
                                    @if (Model?.FotoPerfil == null)
                                    {
                                        <!-- Muestra un ícono si no hay foto de perfil -->
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-gray-500"
                                            fill="currentColor" viewBox="0 0 24 24" stroke="none">
                                            <path
                                                d="M12 12c2.28 0 4-1.72 4-4s-1.72-4-4-4-4 1.72-4 4 1.72 4 4 4zm0 2c-2.67 0-8 1.34-8 4v1h16v-1c0-2.66-5.33-4-8-4z" />
                                        </svg>
                                    }
                                    else
                                    {
                                        <!-- Si hay foto de perfil, mostrarla -->
                                        <img id="previewImage" src="@Model.FotoPerfil" alt="Foto de perfil"
                                            class="w-full h-full object-cover" />
                                    }
                                </div>
                                <div>
                                    <label for="FotoPerfil"
                                        class="cursor-pointer bg-indigo-500 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition-colors duration-300 inline-block">
                                        <span class="flex items-center">
                                            <i class="fas fa-camera mr-2"></i>
                                            Elegir Foto
                                        </span>
                                    </label>
                                    <input id="FotoPerfil" asp-for="FotoPerfil" type="file" accept="image/*"
                                        class="hidden" onchange="previewFile()" />
                                </div>
                            </div>
                            <span asp-validation-for="FotoPerfil" class="text-danger mt-2 block"></span>
                        </div>

                        <!-- Formulario de datos -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6 w-full">
                            <div class="mb-2">
                                <label for="Nombre" class="block text-gray-700 text-sm font-medium mb-2">Nombre</label>
                                <input asp-for="Nombre"
                                    class="dynamic-border w-full px-3 py-2 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-indigo-500 focus:bg-white"
                                    placeholder="Nombre" required />
                                <span asp-validation-for="Nombre" class="text-danger text-xs mt-1"></span>
                            </div>

                            <div class="mb-2">
                                <label for="Apellido"
                                    class="block text-gray-700 text-sm font-medium mb-2">Apellido</label>
                                <input asp-for="Apellido"
                                    class="dynamic-border w-full px-3 py-2 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-indigo-500 focus:bg-white"
                                    placeholder="Apellido" required />
                                <span asp-validation-for="Apellido" class="text-danger text-xs mt-1"></span>
                            </div>

                            <div class="mb-2">
                                <label for="NombreUsuario" class="block text-gray-700 text-sm font-medium mb-2">Correo
                                    electrónico</label>
                                <input asp-for="NombreUsuario" type="email"
                                    class="dynamic-border w-full px-3 py-2 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-indigo-500 focus:bg-white"
                                    placeholder="Correo electrónico" required />
                                <span asp-validation-for="NombreUsuario" class="text-danger text-xs mt-1"></span>
                            </div>

                            <div class="mb-2 relative">
                                <label for="Pass"
                                    class="block text-gray-700 text-sm font-medium mb-2">Contraseña</label>
                                <input asp-for="Pass" id="passwordInput" type="password"
                                    class="dynamic-border w-full px-3 py-2 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-indigo-500 focus:bg-white"
                                    placeholder="Contraseña" required />
                                <span asp-validation-for="Pass" class="text-danger text-xs mt-1"></span>
                                <i class="fas fa-eye-slash absolute top-9 right-3 cursor-pointer text-gray-500"
                                    id="togglePassword" onclick="togglePasswordVisibility()"></i>
                            </div>

                            <div class="mb-2">
                                <label for="Telefono"
                                    class="block text-gray-700 text-sm font-medium mb-2">Teléfono</label>
                                <input asp-for="Telefono" type="tel" maxlength="8"
                                    class="dynamic-border w-full px-3 py-2 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-indigo-500 focus:bg-white"
                                    placeholder="Teléfono" required />
                                <span asp-validation-for="Telefono" class="text-danger text-xs mt-1"></span>
                            </div>

                            <div class="mb-2">
                                <label for="FechaNacimiento" class="block text-gray-700 text-sm font-medium mb-2">Fecha
                                    de nacimiento</label>
                                <input asp-for="FechaNacimiento" type="date"
                                    class="dynamic-border w-full px-3 py-2 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-indigo-500 focus:bg-white"
                                    required />
                                <span asp-validation-for="FechaNacimiento" class="text-danger text-xs mt-1"></span>
                            </div>

                            <div class="mb-2 md:col-span-2">
                                @if (User.IsInRole("Administrador"))
                                {
                                    <label for="IdCargo" class="block text-gray-700 text-sm font-medium mb-2">Cargo</label>
                                    <select asp-for="IdCargo"
                                        class="dynamic-border w-full px-3 py-2 rounded-lg font-medium bg-gray-100 border border-gray-200 text-sm focus:outline-none focus:border-indigo-500 focus:bg-white"
                                        required>
                                        <option value="">Seleccionar</option>
                                        @foreach (var item in ViewBag.Cargos)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="IdCargo" class="text-danger text-xs mt-1"></span>
                                }
                                else
                                {
                                    @Html.HiddenFor(model => model.IdCargo, new { Value = ViewBag.CargoColaboradorId })
                                }
                            </div>
                        </div>

                        <button type="submit"
                            class="mt-4 tracking-wide font-semibold bg-indigo-500 text-gray-100 w-full py-2 rounded-lg hover:bg-indigo-700 transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none">
                            <span class="ml-3">
                                <i class="fas fa-user-plus"></i>
                                Crear Cuenta
                            </span>
                        </button>
                        <div class="flex justify-center mt-4">
                            <a asp-action="Index"
                                class="flex items-center justify-center px-4 py-2 border border-gray-400 rounded-lg text-indigo-500 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-700 text-sm font-medium no-underline transition-all duration-200 ease-out">
                                <i class="fas fa-arrow-left mr-2"></i>
                                Regresar
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="flex-1 bg-indigo-100 text-center hidden lg:flex">
        <div class="m-4 xl:m-4 w-full bg-contain bg-center bg-no-repeat"
            style="background-image: url('/img/create login-amico.svg');">
            @* background-size: 200px 200px; *@
        </div>
    </div>
</div>

<script>

    document.addEventListener("DOMContentLoaded", function () {
        // Limpiar el preview si el formulario ha sido enviado con errores de validación
        var previewImage = document.getElementById('previewImage');
        var previewContainer = document.querySelector('.w-24.h-24.bg-gray-200.rounded-full.overflow-hidden');

        if (previewImage && !document.getElementById('FotoPerfil').files.length) {
            previewImage.src = ''; // Limpiar la imagen en preview

            // Mostrar el SVG si no hay imagen
            previewContainer.innerHTML = `
                <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-gray-500" fill="currentColor" viewBox="0 0 24 24" stroke="none">
                    <path d="M12 12c2.28 0 4-1.72 4-4s-1.72-4-4-4-4 1.72-4 4 1.72 4 4 4zm0 2c-2.67 0-8 1.34-8 4v1h16v-1c0-2.66-5.33-4-8-4z" />
                </svg>
            `;
        }
    });

    function previewFile() {
        var previewContainer = document.querySelector('.w-24.h-24.bg-gray-200.rounded-full.overflow-hidden');
        var preview = document.getElementById('previewImage');

        if (!preview) {
            preview = document.createElement('img');
            preview.id = 'previewImage';
            preview.className = 'w-full h-full object-cover';
            previewContainer.innerHTML = '';
            previewContainer.appendChild(preview);
        }

        var file = document.getElementById('FotoPerfil').files[0];
        var reader = new FileReader();

        reader.onloadend = function () {
            preview.src = reader.result;
        }

        if (file) {
            reader.readAsDataURL(file);
        } else {
            preview.src = "/img/default-avatar.png";
        }
    }

</script>
