<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-8">Dashboard</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-xl font-semibold text-gray-700 mb-2">Total Usuarios</h3>
            <p class="text-3xl font-bold text-blue-600">@ViewBag.TotalUsuarios</p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-xl font-semibold text-gray-700 mb-2">Total Proyectos</h3>
            <p class="text-3xl font-bold text-green-600">@ViewBag.TotalProyectos</p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-xl font-semibold text-gray-700 mb-2">Total Tareas</h3>
            <p class="text-3xl font-bold text-purple-600">@ViewBag.TotalTareas</p>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var proyecto in ViewBag.TareasPorProyecto)
        {
            <div class="bg-white rounded-lg shadow-md p-6">
                <h4 class="text-xl font-semibold text-gray-800 mb-4">@proyecto.Key</h4>
                <div class="space-y-2 mb-4">
                    <p class="flex justify-between">
                        <span class="text-gray-600">Usuarios Unidos:</span>
                        <span class="font-semibold text-indigo-600">@ViewBag.UsuariosPorProyecto[proyecto.Key]</span>
                    </p>
                    <p class="flex justify-between">
                        <span class="text-gray-600">Tareas Pendientes:</span>
                        <span class="font-semibold text-yellow-600">@proyecto.Value.Pendientes</span>
                    </p>
                    <p class="flex justify-between">
                        <span class="text-gray-600">Tareas En Proceso:</span>
                        <span class="font-semibold text-blue-600">@proyecto.Value.EnProceso</span>
                    </p>
                    <p class="flex justify-between">
                        <span class="text-gray-600">Tareas Finalizadas:</span>
                        <span class="font-semibold text-green-600">@proyecto.Value.Finalizadas</span>
                    </p>
                </div>

                <div class="relative pt-1 mb-4">
                    <div class="flex mb-2 items-center justify-between">
                        <div>
                            <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-green-600 bg-green-200">
                                Progreso
                            </span>
                        </div>
                        <div class="text-right">
                            <span class="text-xs font-semibold inline-block text-gray-600">
                                @ViewBag.ProgresoPorProyecto[proyecto.Key]%
                            </span>
                        </div>
                    </div>
                    <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-gray-400">
                        <div style="width: @ViewBag.ProgresoPorProyecto[proyecto.Key]%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-green-400"></div>
                    </div>
                </div>

                
            </div>
        }
    </div>
</div>